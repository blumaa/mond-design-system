{
  "name": "mond-design-system",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "private": true,
  "workspaces": [
    "apps/*",
    "apps/web/*",
    "component-lib"
  ],
  "scripts": {
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:build": "rm -rf component-lib/dist apps/web/.next component-lib/storybook-static",
    "build": "yarn clean:build && turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "storybook": "turbo run storybook",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "eslint": "^8.56.0",
    "husky": "^9.0.0",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "yarn@1.22.22",
  "dependencies": {
    "@mond-design-system/theme": "^1.13.0"
  }
}
