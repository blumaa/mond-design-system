{
  "name": "@mond-design-system/theme",
  "version": "1.16.4",
  "description": "A modern, accessible React component library with TypeScript support, design tokens, and built-in light/dark themes",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blumaa/mond-design-system.git"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "typescript",
    "design-tokens"
  ],
  "scripts": {
    "build": "yarn clean && yarn build:tokens && yarn build:lib",
    "build:tokens": "node --import tsx tokens/scripts/build.ts",
    "build:lib": "tsc --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "yarn build",
    "dev": "concurrently \"yarn dev:tokens\" \"yarn dev:components\" \"yarn storybook\"",
    "dev:tokens": "nodemon --watch tokens/tokens -e json --exec 'yarn build:tokens'",
    "dev:components": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN",
    "chromatic:ci": "npx chromatic --project-token=$CHROMATIC_PROJECT_TOKEN --exit-zero-on-changes",
    "release:patch": "npm version patch && yarn build && npm publish && git push --follow-tags",
    "release:minor": "npm version minor && yarn build && npm publish && git push --follow-tags",
    "release:major": "npm version major && yarn build && npm publish && git push --follow-tags"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-links": "^9.1.5",
    "@storybook/addon-themes": "^9.1.5",
    "@storybook/react": "^9.1.5",
    "@storybook/react-vite": "^9.1.5",
    "@testing-library/jest-dom": "^5.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.5.0",
    "chromatic": "^13.1.4",
    "concurrently": "^8.2.2",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "^24.0.0",
    "storybook": "^9.1.5",
    "terser": "^5.40.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "components/**/*.{ts,tsx}",
      "tokens/**/*.{ts,tsx}",
      "!**/*.stories.{ts,tsx}",
      "!**/*.test.{ts,tsx}",
      "!**/index.{ts,tsx}",
      "!**/scripts/**",
      "!**/dist/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "dependencies": {
    "@storybook/addon-docs": "^9.1.5"
  }
}
