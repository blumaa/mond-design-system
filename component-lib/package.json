{
  "name": "@mond-design-system/theme",
  "version": "1.1.0",
  "description": "A modern, accessible React component library with TypeScript support, design tokens, and built-in light/dark themes",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/mond-design-system.git"
  },
  "keywords": [
    "design-system",
    "react",
    "components",
    "typescript",
    "design-tokens"
  ],
  "scripts": {
    "build": "yarn clean && yarn build:tokens && yarn build:lib",
    "build:tokens": "tsx tokens/scripts/build.ts",
    "build:lib": "tsc --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "yarn build",
    "dev": "concurrently \"yarn dev:tokens\" \"yarn dev:components\" \"yarn storybook\"",
    "dev:tokens": "nodemon --watch tokens/tokens -e json --exec 'yarn build:tokens'",
    "dev:components": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "release:patch": "npm version patch && yarn build && npm publish && git push --follow-tags",
    "release:minor": "npm version minor && yarn build && npm publish && git push --follow-tags",
    "release:major": "npm version major && yarn build && npm publish && git push --follow-tags"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.7",
    "@storybook/addon-interactions": "^8.6.7",
    "@storybook/addon-links": "^8.6.7",
    "@storybook/addon-themes": "^8.6.12",
    "@storybook/addons": "^7.6.17",
    "@storybook/blocks": "^8.6.7",
    "@storybook/manager-api": "^8.6.14",
    "@storybook/react": "^8.6.7",
    "@storybook/react-vite": "^8.6.7",
    "@storybook/test": "^8.6.7",
    "@storybook/theming": "^8.6.14",
    "@testing-library/jest-dom": "^5.0.0",
    "@testing-library/react": "^13.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.5.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.7.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.9",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^8.6.7",
    "terser": "^5.40.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "collectCoverageFrom": [
      "components/**/*.{ts,tsx}",
      "tokens/**/*.{ts,tsx}",
      "!**/*.stories.{ts,tsx}",
      "!**/*.test.{ts,tsx}",
      "!**/index.{ts,tsx}",
      "!**/scripts/**",
      "!**/dist/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
